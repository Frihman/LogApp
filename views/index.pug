extends layout

block content
  
  div#maincontent
    form(action='/addlog', method='POST')
      h3 Create Log
      textarea(name='content', rows='4')
      br
      div#selections
        select(name='moods')
          option(value='😃') 😃
          option(value='🙁') 🙁
        label(for='favorite') Favorite
        input(type='checkbox' name='favorite' value='true')
      input(type='submit', class='btnSubmit', value='Submit log')

